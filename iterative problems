//C program to reverse a number
#include<stdio.h>
int main()
{
    int n,rev,rem;
    printf("enter the number :");
    scanf("%d",&n);
    for(int i =1;n>0;i++)
    {
        rem=n%10;
        rev=rev*10+rem;
        n=n/10;
        
    }
    printf("reverse is %d",rev);
    return 0;
}

sample output : enter the number : 123456
                reverse is 654321


